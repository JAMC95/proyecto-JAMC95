
{% extends 'layout.html.twig' %}



{% block content %}

    <div class="container-fluid">
        <h1>Empresas de transporte</h1>
        {% for mensaje in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ mensaje }}
            </div>
        {% endfor %}
    <div class="form-group">
        {{ form_start(formulario) }}
        <div class="col-sm-12">

        {{ form_widget(formulario) }}
        </div>
        <div class="col-sm-10">
            <br/>
            <a href="{{ path('tcompanies') }}" class="btn btn-info"><i class="fa fa-arrow-circle-o-left"></i> Volver</a>
            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Guardar cambios</button>
            {% if empresa.id %}

                <a class="btn btn-danger" id="deleteButton"><i class="fa fa-trash"></i> Eliminar</a>
            {% endif %}


        </div>
    </div>
    </div>
    {{ form_end(formulario) }}
{% endblock %}

{% block javascripts %}
    <script>
        {% if empresa.id %}
        $('#deleteButton').click(function () {
            var d = confirm('Â¿Seguro que deseas eliminarlo?');
            if(d) {
                $.ajax({
                    url: '{{ path('delete_tCompany', {'id' : empresa.id}) }}' ,
                    type: 'get',
                    success: function(result) {
                        location.href = '{{path('tcompanies')}}';
                    },
                    error: function(e){
                        location.href = '{{path('tcompanies')}}';
                    }
                });
            }
        });
        {% endif %}
    </script>
{% endblock %}