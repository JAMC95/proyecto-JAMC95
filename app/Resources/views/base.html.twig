<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('dist/css/compiledStylesheet/pack.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        <script src="{{ asset('dist/js/jquery/jquery.min.js') }}"></script>
        <script src="{{ asset('dist/js/bootstrap/bootstrap.min.js') }}"></script>
        <script src="{{ asset('dist/js/select2/select2.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
        <script type="text/javascript">
            $('select').select2({
                theme: "bootstrap"
            });
        </script>
    </body>
</html>
